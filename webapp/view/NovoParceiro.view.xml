<mvc:View xmlns:core="sap.ui.core"
		controllerName="zbm.parceiros.controller.NovoParceiro"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:f="sap.f"
        xmlns:form="sap.ui.layout.form"
		xmlns:layout="sap.ui.layout"
		height="100%">
		<f:DynamicPage id="dynamicPageId2" showFooter="true">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<Title text="Header Title"/>
					</f:heading>
				</f:DynamicPageTitle>
			</f:title>
			<f:content>
                 <VBox class="sapUiSmallMargin">
                    <form:SimpleForm id="SimpleFormDisplay3542"
                        editable="false"
                        layout="ResponsiveGridLayout"
                        title="Partner details"
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false" >
                        <form:content>
                            <Label text="Partner type" />
                             <Select items="{novoParceiro>/categorias}" change="aoEscolherCategoria">
                                <core:Item key="{novoParceiro>PartnerType}" text="{novoParceiro>Texto}" />
                            </Select> 
                            <Label text="Name 1" />
                            <Input value="{novoParceiro>/PartnerName1}" />
                            <Label text="Name 2" />
                            <Input value="{novoParceiro>/PartnerName2}" />
                            <Label text="Search Term 1" />
                            <Input value="{novoParceiro>/SearchTerm1}" />
                            <Label text="Search Term 2" />
                            <Input value="{novoParceiro>/SearchTerm2}" />
                            <Label text="Street" />
                            <Input  value="{novoParceiro>/Street}" />
                            <Label text="NÂº" />
                            <Input  value="{novoParceiro>/HouseNumber}" />
                             <Label text="District" />
                            <Input  value="{novoParceiro>/District}" />                      
                            <Label text="City" />
                            <Input  value="{novoParceiro>/City}" />
                            <Label text="Region" />
                            <Input  value="{novoParceiro>/Region}" />            
                            <Label text="Zip Code" />
                            <Input  value="{novoParceiro>/ZipCode}" />                           
                            <Label text="Country" />
                            <Input  value="{novoParceiro>/Country}" />
                        </form:content>
                    </form:SimpleForm>
                </VBox> 
			</f:content>
            <f:footer>
                <OverflowToolbar >
                    <ToolbarSpacer />
                    <Button id="bSave" text="Save"   press="aoSalvar" type="Accept"/>
                    <Button id="bCancel" text="Cancel" press="aoCancelar" type="Reject"/>
                </OverflowToolbar>
            </f:footer>
		</f:DynamicPage>
</mvc:View>