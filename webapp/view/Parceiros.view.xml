<mvc:View controllerName="zbm.parceiros.controller.Parceiros"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <Table growing="true" items="{/ParceiroSet}" id="listaParceiros" itemPress="aoSelecionarParceiro" mode="SingleSelectMaster" width="80%">
             <headerToolbar>
                <OverflowToolbar >
                    <SearchField width="40%" placeholder="Partner Name" liveChange="aoDigitar"></SearchField>
                    <ToolbarSpacer/>
                    <Button text="Create" type="Emphasized" press="criarBP"></Button>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="Partner name"/>
                </Column>
                                <Column>
                    <Text text="ID"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle" type="Navigation">
                    <cells>
                        <Text text="{PartnerName1}"></Text>
                        <Text text="{PartnerId}"></Text>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
